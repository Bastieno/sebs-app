// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model
model User {
  id           String   @id @default(uuid())
  email        String   @unique
  name         String
  phone        String
  role         Role     @default(USER)
  passwordHash String   @map("password_hash")
  isActive     Boolean  @default(true) @map("is_active")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  // Relations
  subscriptions     Subscription[]
  accessLogs        AccessLog[]
  approvedSubscriptions Subscription[] @relation("ApprovedBy")
  processedReceipts PaymentReceipt[] @relation("ProcessedBy")
  notifications     Notification[]

  @@map("users")
}

// Plan model
model Plan {
  id           String       @id @default(uuid())
  name         String
  price        Decimal      @db.Decimal(10, 2)
  timeUnit     TimeUnit     @map("time_unit")
  duration     Int          // Number of time units (e.g., 4 hours, 1 week, 1 month)
  maxCapacity  Int?         @map("max_capacity")
  currentCapacity Int       @default(0) @map("current_capacity")
  isCustom     Boolean      @default(false) @map("is_custom") // Distinguish custom plans from system plans
  notes        String?      @db.Text // Optional notes for custom plans
  isActive     Boolean      @default(true) @map("is_active")
  createdAt    DateTime     @default(now()) @map("created_at")
  updatedAt    DateTime     @updatedAt @map("updated_at")

  // Relations
  subscriptions Subscription[]

  @@map("plans")
}

// Subscription model
model Subscription {
  id           String             @id @default(uuid())
  userId       String             @map("user_id")
  planId       String             @map("plan_id")
  timeSlot     TimeSlot?          @map("time_slot") // Time-of-day access restriction (MORNING, AFTERNOON, NIGHT, ALL)
  status       SubscriptionStatus @default(PENDING)
  startDate    DateTime           @map("start_date") @db.Date
  endDate      DateTime           @map("end_date") @db.Date
  accessCode   String             @unique @map("access_code")
  adminNotes   String?            @map("admin_notes") @db.Text
  approvedBy   String?            @map("approved_by")
  approvedAt   DateTime?          @map("approved_at")
  createdAt    DateTime           @default(now()) @map("created_at")
  updatedAt    DateTime           @updatedAt @map("updated_at")

  // Relations
  user           User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan           Plan             @relation(fields: [planId], references: [id])
  approver       User?            @relation("ApprovedBy", fields: [approvedBy], references: [id])
  accessLogs     AccessLog[]
  paymentReceipts PaymentReceipt[]

  @@map("subscriptions")
}

// Access Log model
model AccessLog {
  id               String           @id @default(uuid())
  userId           String           @map("user_id")
  subscriptionId   String           @map("subscription_id")
  action           AccessAction
  timestamp        DateTime         @default(now())
  scannerLocation  String           @default("main_entrance") @map("scanner_location")
  validationResult ValidationResult @map("validation_result")
  createdAt        DateTime         @default(now()) @map("created_at")

  // Relations
  user         User         @relation(fields: [userId], references: [id])
  subscription Subscription @relation(fields: [subscriptionId], references: [id])

  @@map("access_logs")
}

// Payment Receipt model
model PaymentReceipt {
  id             String        @id @default(uuid())
  subscriptionId String        @map("subscription_id")
  receiptUrl     String        @map("receipt_url")
  amount         Decimal       @db.Decimal(10, 2)
  status         PaymentStatus @default(PENDING)
  uploadedAt     DateTime      @default(now()) @map("uploaded_at")
  processedAt    DateTime?     @map("processed_at")
  processedBy    String?       @map("processed_by")
  adminNotes     String?       @map("admin_notes") @db.Text

  // Relations
  subscription Subscription @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)
  processor    User?        @relation("ProcessedBy", fields: [processedBy], references: [id])

  @@map("payment_receipts")
}

// Enums
enum Role {
  USER
  ADMIN
  SUPER_ADMIN
}

enum TimeUnit {
  HOURS
  DAYS
  WEEK
  MONTH
  YEAR
}

enum TimeSlot {
  MORNING
  AFTERNOON
  NIGHT
  ALL
}

enum SubscriptionStatus {
  PENDING
  ACTIVE
  IN_GRACE_PERIOD
  EXPIRED
  SUSPENDED
}

enum AccessAction {
  ENTRY
  EXIT
}

enum ValidationResult {
  SUCCESS
  DENIED
  EXPIRED
  INVALID_TIME
  CAPACITY_FULL
}

enum PaymentStatus {
  PENDING
  APPROVED
  REJECTED
}

model Notification {
  id        String           @id @default(uuid())
  userId    String           @map("user_id")
  type      NotificationType @default(GENERAL)
  message   String
  isRead    Boolean          @default(false) @map("is_read")
  createdAt DateTime         @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("notifications")
}

enum NotificationType {
  EXPIRING_SOON
  EXPIRED
  PAYMENT_RECEIVED
  GENERAL
}
