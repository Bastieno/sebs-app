generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                    String           @id @default(uuid())
  email                 String           @unique
  name                  String
  phone                 String
  role                  Role             @default(USER)
  passwordHash          String           @map("password_hash")
  isActive              Boolean          @default(true) @map("is_active")
  createdAt             DateTime         @default(now()) @map("created_at")
  updatedAt             DateTime         @updatedAt @map("updated_at")
  accessLogs            AccessLog[]
  notifications         Notification[]
  processedReceipts     PaymentReceipt[] @relation("ProcessedBy")
  approvedSubscriptions Subscription[]   @relation("ApprovedBy")
  subscriptions         Subscription[]

  @@map("users")
}

model Plan {
  id              String         @id @default(uuid())
  name            String
  price           Decimal        @db.Decimal(10, 2)
  maxCapacity     Int?           @map("max_capacity")
  isActive        Boolean        @default(true) @map("is_active")
  createdAt       DateTime       @default(now()) @map("created_at")
  currentCapacity Int            @default(0) @map("current_capacity")
  isCustom        Boolean        @default(false) @map("is_custom")
  notes           String?
  updatedAt       DateTime       @updatedAt @map("updated_at")
  duration        Int
  timeUnit        TimeUnit       @map("time_unit")
  defaultTimeSlot TimeSlot?      @map("default_time_slot")
  planType        PlanType?      @map("plan_type")
  subscriptions   Subscription[]

  @@map("plans")
}

model Subscription {
  id              String             @id @default(uuid())
  userId          String             @map("user_id")
  planId          String             @map("plan_id")
  timeSlot        TimeSlot?          @map("time_slot")
  status          SubscriptionStatus @default(PENDING)
  startDate       DateTime           @map("start_date") @db.Timestamp(6)
  endDate         DateTime           @map("end_date") @db.Timestamp(6)
  accessCode      String             @unique @map("access_code")
  adminNotes      String?            @map("admin_notes")
  approvedBy      String?            @map("approved_by")
  approvedAt      DateTime?          @map("approved_at")
  createdAt       DateTime           @default(now()) @map("created_at")
  updatedAt       DateTime           @updatedAt @map("updated_at")
  accessLogs      AccessLog[]
  paymentReceipts PaymentReceipt[]
  approver        User?              @relation("ApprovedBy", fields: [approvedBy], references: [id])
  plan            Plan               @relation(fields: [planId], references: [id])
  user            User               @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("subscriptions")
}

model AccessLog {
  id               String           @id @default(uuid())
  userId           String           @map("user_id")
  subscriptionId   String           @map("subscription_id")
  action           AccessAction
  timestamp        DateTime         @default(now())
  scannerLocation  String           @default("main_entrance") @map("scanner_location")
  validationResult ValidationResult @map("validation_result")
  createdAt        DateTime         @default(now()) @map("created_at")
  subscription     Subscription     @relation(fields: [subscriptionId], references: [id])
  user             User             @relation(fields: [userId], references: [id])

  @@map("access_logs")
}

model PaymentReceipt {
  id             String        @id @default(uuid())
  subscriptionId String        @map("subscription_id")
  receiptUrl     String        @map("receipt_url")
  amount         Decimal       @db.Decimal(10, 2)
  status         PaymentStatus @default(PENDING)
  uploadedAt     DateTime      @default(now()) @map("uploaded_at")
  processedAt    DateTime?     @map("processed_at")
  processedBy    String?       @map("processed_by")
  adminNotes     String?       @map("admin_notes")
  processor      User?         @relation("ProcessedBy", fields: [processedBy], references: [id])
  subscription   Subscription  @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)

  @@map("payment_receipts")
}

model Notification {
  id        String           @id @default(uuid())
  userId    String           @map("user_id")
  message   String
  isRead    Boolean          @default(false) @map("is_read")
  createdAt DateTime         @default(now()) @map("created_at")
  type      NotificationType @default(GENERAL)
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("notifications")
}

enum Role {
  USER
  ADMIN
  SUPER_ADMIN
}

enum TimeUnit {
  HOURS
  DAYS
  WEEK
  MONTH
  YEAR
  MINUTES
}

enum TimeSlot {
  MORNING
  AFTERNOON
  NIGHT
  ALL
}

enum SubscriptionStatus {
  PENDING
  ACTIVE
  EXPIRED
  SUSPENDED
  IN_GRACE_PERIOD
}

enum AccessAction {
  ENTRY
  EXIT
}

enum ValidationResult {
  SUCCESS
  DENIED
  EXPIRED
  INVALID_TIME
  CAPACITY_FULL
}

enum PaymentStatus {
  PENDING
  APPROVED
  REJECTED
}

enum NotificationType {
  EXPIRING_SOON
  EXPIRED
  PAYMENT_RECEIVED
  GENERAL
}

enum PlanType {
  DAILY
  WEEKLY
  MONTHLY
  TEAM
  CUSTOM
}
